<div class="row top-margin">
    <div class="col col-3"></div>
    <div class="col col-6 text-center">
        <h2 class="heading">What the Flick?</h2>
    </div>
    <div class="col col-3"></div>
</div>


<div class="row top-inside-margin">
    <div class="col col-3"></div>
    <div class="col col-6"><img id="poster" src={{imgUrl}}></div>
    <div class="col col-3"></div>
</div>

<div class="row">
    <div class="col col-3"></div>
    <div class="col col-6"><p id="hint"></p></div>
    <div class="col col-3"></div>
</div>

<div class="row">
    <div class="col col-3"></div>
    <div class="col col-6 text-center" id="multipleChoices">
        <form method="POST" action="/guess">
            {{#each choice}}
                <input id="{{this}}" name="answer" type="radio" value='{{this}}'>
                <label  class='ansr-choice' for='{{this}}'>{{this}}</label><br>
            {{/each}}
            <button id="submit-button" type="submit">Submit</button>
            <button id="hint-button" type="button" onclick="getHint(hint)">Hint</button>
        </form>
    </div>
    <div class="col col-3"></div>
</div>

<script>
  var hint = "{{overviewHint}}";
</script>
